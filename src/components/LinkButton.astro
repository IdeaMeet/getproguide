---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
}

const {
  href,
  className = "",
  ariaLabel,
  title,
  disabled = false,
} = Astro.props;
---

{
  disabled ? (
    <span
      class:list={["group inline-block", className]}
      title={title}
      aria-disabled={disabled}
    >
      <slot />
    </span>
  ) : (
    <a
      href={href}
      class="focus-outline inline-block cursor-pointer rounded-lg bg-skin-accent px-4 py-2 text-skin-inverted transition-colors duration-200 hover:bg-skin-accent/80"
      {...props}
    >
      <slot />
    </a>
  )
}